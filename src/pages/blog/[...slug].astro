---
import MarkdownLayoutNew from "@layouts/MarkdownLayoutNew.astro";
import { getEntryBySlug } from "astro:content";

interface Entry {
  render(): Promise<{ Content: any }>;
}

// 1. Get the slug from the incoming server request
const { slug } = Astro.params;

// 2. Query for the entry directly using the request slug
const entry = (await getEntryBySlug("posts", slug as string)) as Entry; // <-- add this line

// 3. (Optional) render the entry to HTML in the template
const { Content } = await entry.render();
---

<MarkdownLayoutNew frontmatter={entry.data}>
  <Content />
</MarkdownLayoutNew>
