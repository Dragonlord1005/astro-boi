---
import BaseLayout from "@layouts/BaseLayout.astro";
import Card from "@components/Card.astro";

import "@styles/text-gradient.css";
export const prerender = true;
---

<BaseLayout title="Astro-boi" description="Home Page">
    <!-- Prose is causing an issue -->
    <main class="prose wrapper">
      <title>Astro Boi</title>
      <h1 class="animate-fade-in animate-delay-1s">
        <span class="text-gradient">Astro Boi</span>
      </h1>
      <h2 class="mb10">A personal site</h2>
      <ul role="list" class="link-card-grid">
        <Card
          href="/projects"
          title="Projects"
          body="View My personal projects"
        />
        <Card href="/blog" title="Blog" body="My blog posts" />
      </ul>
    </main>
</BaseLayout>
