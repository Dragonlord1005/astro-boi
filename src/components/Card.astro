---
/**
 * Represents a card component with a title, body, and a link.
 */
export interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;

import "@styles/link-card-grid.css";
---

<li class="link-card">
  <a href={href}>
    <h2 class="m-0 text-xl font-sans">
      {title}
      <span>&rarr;</span>
    </h2>
    <p class="dark:color-white mt-0.5em mb-0 color-#444">
      {body}
    </p>
  </a>
</li>
<style>
  .link-card {
    list-style: none;
    display: flex;
    padding: 0.15rem;
    background-color: white;
    background-image: var(--accent-gradient);
    background-size: 400%;
    border-radius: 0.5rem;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -2px rgba(0, 0, 0, 0.1);
  }

  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 1rem 1.3rem;
    border-radius: 0.35rem;
    color: #111;
    background-color: white;
    opacity: 0.8;
    @apply font-sans
    @apply dark:(bg-gray-600 color-white);
  }
  h2 {
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent));
  }
</style>
