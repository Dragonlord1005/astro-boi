{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": "src/",
    "paths": {
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@layouts/*": ["layouts/*"],
      "@scripts/*": ["scripts/*"]
    }
  },
  "exclude": ["./node_modules", "./.astro"]
}
